extends layout
block content
    h1 Ajouter un nouveau film

    form(action="/api/movies/createMovie" method="post")

      label(for="title") Titre du film 
      br
      input(type="text" id="title" name="title" required)
      br
      
      label(for="synopsis") Synopsis
      br
      input(type="text" id="synopsis" name="synopsis" required)
      br
    
      input(type="file" id="fileUpload" name="fileUpload" required)
      br
      input(type="text" id="filePath" name="filePath" required)
      br

      // -- Version      
      label(for="version") Version
      br
      input(type="number" id="version" name="version" required)
      br

      br
      button(type="submit") Ajouter le film
        
